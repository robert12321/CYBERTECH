<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CapturingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Capturing_CameraView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                app:srcCompat="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capturingApp_label_GPS"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Capturing_GPSView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capturingApp_label_Time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Capturing_TimeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capturingApp_label_Network"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Capturing_NetworkView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capturingApp_label_Sensors"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Capturing_SensorsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/Capturing_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="capturingButton" />

                <ImageButton
                    android:id="@+id/Capturing_indicator"
                    style="@android:style/MediaButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="false"
                    app:srcCompat="@android:color/holo_red_dark" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>